<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Реєстрація"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_margin="5dp"
                />
        </LinearLayout>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_reg_field"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Введіть пароль із восьми чисел"
            app:met_primaryColor="@color/white"
            android:hint="Введіть емейл"
            app:met_textColorHint="#B1B1B1"
            android:inputType="textEmailAddress"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_reg_field"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Введіть пароль із восьми чисел"
            app:met_primaryColor="@color/white"
            android:hint="Введіть ім'я та прізвище"
            app:met_textColorHint="#B1B1B1"
            android:inputType="text"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_reg_field"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Введіть пароль із восьми чисел"
            app:met_primaryColor="@color/white"
            android:hint="Введіть номер телефону"
            app:met_textColorHint="#B1B1B1"
            android:inputType="phone"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pass_reg_field"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Введіть пароль із восьми чисел"
            app:met_primaryColor="@color/white"
            android:hint="Введіть пароль"
            app:met_textColorHint="#B1B1B1"
            android:inputType="textPassword"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_to_main"
                android:backgroundTint="@color/button"
                android:text="Назад"
                android:textColor="@color/red"
                android:layout_margin="10dp"/>
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_register"
                android:backgroundTint="@color/button"
                android:text="зареєструвати"
                android:textColor="@color/green"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>