<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppFragment"
    android:background="@color/background"
    android:id="@+id/app_fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#232323">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="EGO"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="36dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Чати"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="28dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textAlignment="viewEnd"
                android:layout_margin="5dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#2E2E2E">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/profile_btn"
                        android:src="@drawable/ic_profile_btn"/>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/message_btn"
                        android:background="@color/background"
                        android:padding="5dp"
                        android:src="@drawable/ic_message_btn"/>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/settings_btn"
                        android:padding="5dp"
                        android:src="@drawable/ic_settings_btn"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="70dp"
                        android:id="@+id/info_btn"
                        android:padding="5dp"
                        android:src="@drawable/ic_info_btn"/>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/logout_btn"
                        android:padding="5dp"
                        android:src="@drawable/ic_logout_btn"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/lock_btn"
                    android:padding="5dp"
                    android:src="@drawable/ic_lock_btn"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/list_of_chats">
            </ListView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>